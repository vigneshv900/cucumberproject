package stepdefinition;

import java.util.List;

import io.cucumber.datatable.DataTable;
import io.cucumber.java.en.Given;
import io.cucumber.java.en.Then;
import io.cucumber.java.en.When;

public class LoginSteps {

	@Given("user is on the login screen")
	public void user_is_on_the_login_screen() {
	   System.out.println("Given step");
	}

	@When("the user enters the username as {string} and password as {string}")
	public void the_user_enters_the_username_and_password(String user,String pass) {
		
		System.out.println(user);
		System.out.println(pass);
		
	  
	}

	@Then("he needs to login successfully")
	public void he_needs_to_login_successfully() {
	    System.out.println("Then step");
	}

	@Given("The user is on main screen enters {string}")
	public void user_is_on_the_main_Screen(String value) {
		System.out.println("main");
		System.out.println(value);
	}
	
	@When("the user clicks logout")
	public void clickLogout() {
		System.out.println("Logout");
	}
	@Then("the user should be logged out")
	public void loggedOut() {
		System.out.println("Logged out");
	}
}
